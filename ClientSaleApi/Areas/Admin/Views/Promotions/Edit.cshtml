@model ClientSaleApi.Models.Promotions.PromotionEx

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="single-product-tab-area mg-b-30">
	<!-- Single pro tab review Start-->
	<div class="single-pro-review-area">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="review-tab-pro-inner">
						<form asp-area="Admin" asp-controller="Promotions" asp-action="@(Model == null ? "Them" : "CapNhat")" asp-route-promotionid="@(Model?.PromotionId)" method="post">
							<div id="myTabContent" class="tab-content custom-product-edit">
								<div class="product-tab-list tab-pane fade active in" id="description">
									<div class="row">
										<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
											<div class="review-content-section">
												@if (Model != null)
												{
												<div class="input-group mg-b-pro-edt" style="display:none">
													<span class="input-group-addon"><i class="icon nalika-new-file" aria-hidden="true"></i></span>
													<input asp-for="PromotionId" type="text" class="form-control" aria-describedby="text" readonly>
												</div>
												}
												<div class="input-group mg-b-pro-edt">
													<span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
													<input id="PromotionName" asp-for="PromotionName" type="text" class="form-control" placeholder="Name" aria-describedby="text" required>
													<span asp-validation-for="PromotionName" class="text-danger"></span>
												</div>
												<div class="input-group mg-b-pro-edt">
													<span class="input-group-addon"><i aria-hidden="true"></i></span>
													<textarea asp-for="PromotionDes" class="form-control" rows="6" placeholder="Description" aria-describedby="text"></textarea>
												</div>
												<div class="input-group mg-b-pro-edt">
													<span class="input-group-addon"><i class="icon nalika-edit" aria-hidden="true"></i></span>
													<input asp-for="Discount" type="number" class="form-control" placeholder="Discount: 0 - 100" aria-describedby="text">
													<span asp-validation-for="Discount" class="text-danger"></span>
												</div>
												<div class="form-group data-custon-pick data-custom-mg text-muted" id="data_5">
													<div class="input-daterange input-group text-white text-center bg-dark" id="datepicker">
														<label style="color: white;">StartDate</label>
														<input asp-for="StartDate" type="text" class="form-control">
														<span class="input-group-addon" style="background-color: #1b2a47;">to</span>
														<label style="color: white;">EndDate</label>
														<input asp-for="EndDate" type="text" class="form-control">
													</div>
												</div>
												<div class="input-group mg-b-pro-edt form-check">
													<input name="IsActive" id="kichhoat" class="form-check-input" type="checkbox" @(Model?.IsActive == true ? "checked" : "") />
													<label asp-for="IsActive" class="form-check-label" style="color: white; margin-left: 10px;"> Kích hoạt</label>
												</div>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
											<div class="text-center custom-pro-edt-ds">
												<button type="submit" id="@((Model == null) ?"them" : "capnhat")"
														class="btn btn-ctl-bt waves-effect waves-light m-r-10" data-bs-toggle="modal" data-bs-target="#errorModal">
													@((Model == null) ? "Add" : "Update")
												</button>
												<button type="reset" class="btn btn-ctl-bt waves-effect waves-light" value="Reset">
													Reset
												</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
