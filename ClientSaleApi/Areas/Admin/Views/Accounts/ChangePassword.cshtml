@model ClientSaleApi.Models.Accounts.InputChangePassword
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAccount.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
        <div class="col-md-4 col-md-4 col-sm-4 col-xs-12">
            <div class="text-center m-b-md custom-login" style="color: white;">
                <h3>CHANGE PASSWORD</h3>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    <form id="loginForm" asp-area="Admin" asp-controller="Accounts" asp-action="ChangePassword" method="post">
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group col-lg-12">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" type="password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-lg-12">
                            <label asp-for="ConfirmPassword">Repeat Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" minlength="6" maxlength="50" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block loginbtn">Change Password</button>
                    </form>

                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
    </div>
</div>


