	<script>
		function customSort(sortName, sortOrder, data) {
			var order = sortOrder === 'desc' ? -1 : 1;
			if (sortName === 'status') {
				sortName = 'isActive';
			}
			data.sort(function (a, b) {
				var aa = a[sortName];
				var bb = b[sortName];
				if (typeof aa === 'string' && !isNaN(aa)) {
					aa = +aa;
				}
				if (typeof bb === 'string' && !isNaN(bb)) {
					bb = +bb;
				}
				if (typeof aa === 'string') {
					aa = aa.toLowerCase();
				}
				if (typeof bb === 'string') {
					bb = bb.toLowerCase();
				}
				if (aa < bb) {
					return order * -1;
				}
				if (aa > bb) {
					return order;
				}
				return 0;
			});
		}
	</script>
	<!-- Kiểm tra token hết hạn để đăng xuất -->
	<script type="text/javascript">
		$(document).ready(function () {
			$.ajax({
