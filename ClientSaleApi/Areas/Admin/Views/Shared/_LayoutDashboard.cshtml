				type: 'GET',
				success: function (data) {
					if (!data.valid) {
						logout();
					}
				},
				error: function (jqXHR, textStatus, errorThrown) {
					console.log('Error calling api:', textStatus, errorThrown);
				}
			});

		});
		function logout() {
			$.ajax({
				url: '/thanh-vien/dang-xuat',
				type: 'POST',
				success: function (data) {
					window.location.href = '/thanh-vien/dang-nhap';
				},
				error: function (jqXHR, textStatus, errorThrown) {
					console.log('Error calling api:', textStatus, errorThrown);
				}
