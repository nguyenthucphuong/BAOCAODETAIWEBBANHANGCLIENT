@model ClientSaleApi.Models.ViewModels.PagingViewModel

<nav>
	<ul class="pagination justify-content-center">
		<li class="page-item @(Model?.Page == 1 ? "disabled" : "")">
			<a class="page-link" data-page="@((Model?.Page ?? 1) - 1)">Previous</a>
		</li>
		@for (int i = 1; i <= Model?.TotalCount / Model?.PageSize + (Model?.TotalCount % Model?.PageSize == 0 ? 0 : 1); i++)
		{
			<li class="page-item @(i == Model?.Page ? "active" : "")">
				<a class="page-link" data-page="@i">@i</a>
			</li>
		}
		<li class="page-item @(Model?.Page == Model?.TotalCount / Model?.PageSize + (Model?.TotalCount % Model?.PageSize == 0 ? 0 : 1) ? "disabled" : "")">
			<a class="page-link" data-page="@((Model?.Page ?? 1) + 1)">Next</a>
		</li>
	</ul>
</nav>
