@model string
@using Newtonsoft.Json
<!-- Thông báo khi tạo tài khoản, đăng nhập...-->
<div class="modal" tabindex="-1" role="dialog" id="message-modal">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header bg-primary text-white text-center">
				<h5 class="modal-title" style="font-size: 14px;">Thông báo</h5>
			</div>
			<div class="modal-body text-primary text-center" style="font-size: 15px;">
				<p id="message-content"></p>
			</div>
		</div>
	</div>
</div>
<script>
	$(document).ready(function () {
		var message = '@Html.Raw(JsonConvert.SerializeObject(Model))';
		if (message !== '') {
			message = message.replace(/"/g, '');
			$("#message-content").text(message);
			$("#message-modal").modal('show');
			setTimeout(function () {
				$("#message-modal").modal('hide');
			}, 3000);
		}
	});
</script>
